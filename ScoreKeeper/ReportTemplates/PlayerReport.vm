<!DOCTYPE html>
<html lang="en">
   <head>
      <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900italic,900' rel='stylesheet' type='text/css'>
      <title>${Player.Number} - ${Player.Name} Game Report</title>
      <style>
         .title {
         color:black;
         background: gold;
         font-size: larger;
         font-weight: bold;
         font-family: Roboto;
         width: 100%;
         height: 45px;
         vertical-align: middle;
         display: block;
         border-bottom: 1px solid black;
         border-top: 1px solid black;
         }
         .gamehead-cont {
         background: gray;
         width: 100%;
         padding-top: 8px;
         padding-bottom: 8px;
         }
         .gamehead {
         color: black;
         background: #F0FFF0;
         font-size: larger;
         font-weight: bold;
         font-family: Roboto;
         width: calc(100% - 16px);
         display: block;
         margin-left: 6px;
         border: 1px solid black;
         box-shadow: 5px 5px 2px grey;
         margin-top: 6px;
         margin-bottom: 6px;
         padding-bottom: 25px;
         }
         .pName {
         padding-left: 20px;
         padding-top: 13px;
         float: left;
         font-family: Roboto;
         }
         .rDate {
         padding-right: 20px;
         padding-top: 13px;
         float: right;
         font-family: Roboto;
         }
         .sectiontitle {
         color: black;
         font-weight: bold;
         font-family: Roboto;
         font-size: larger;
         padding-left: 10px;
         padding-top: 25px;      
         margin-bottom: 15px;
         }
         .datatable {
         display: flex;
         width: calc(100%-20px);
         align: center;
         }
         .teamdatatable {
         width: calc(100% - 20px);
         align: center;
         }
         .teamdatatable td{
         text-align: center;
         font-family: Roboto;
         }
         .teamdatatable th {
         text-align: center;
         background: #082D60;
         font-family: Roboto;
         color: white;
         font-weight: bolder;
         }
         .dttext {
         flex: 1;
         }
         .dtlabels {
         text-align: right;
         font-family: Roboto;
         //background: orange;
         padding-right: 5px;
         }
         .dtvalues {
         text-align: left;
         font-family: Roboto;
         //background: cyan;
         padding-left: 5px;
         }
         .break {
         height: 10px;
         background-color: black;
         display: block;
         }
         .statsection {
         align: center;
         border-bottom: 1px solid black;
         }
      </style>
   </head>
   <body>
      <!-- Player Name Header -->      
      <div class="title">
         <img height="45" style="float: left;" alt="My Image" src="data:image/png;base64,"/>
         <span class="pName">${Player.Number} - ${Player.Name}</span>
         <span class="rDate">${GameData.GetGameDate()}</span>
      </div>
      <div class="gamehead-cont">
         <div class="gamehead">
            <div class="sectiontitle"><span>Game Data</span></div>
            <div style="display: flex;">
               <div style="flex: 1; text-align: center; justify-content: center; align-items: center;">
                  Outcome: ${GameData.Outcome}<br/>
                  Score: $!{GameData.FinalScore}<br/>
                  Opponent: $!{GameData.OpposingTeamNameOrId}<br/>
               </div>
            </div>
         </div>
      </div>
      <div class="break">&nbsp;</div>
      <!-- Player Stats -->
      <div class="gamehead-cont">
         <div class="gamehead">
            <div class="sectiontitle"><span>Player Stats - Game</span></div>
            <div class="datatable">
               <div class="dttext dtlabels">
                  Played Minutes:<br/>
                  Inside Shots:<br/>
                  Field Goals:</br>
                  Assists:<br/>
                  Foul Shots:<br/>
               </div>
               <div class="dttext dtvalues">
                  0 (Coming Soon)<br/>
                  ${PlayerStats.GetInsideSummary()}<br/>
                  ${PlayerStats.GetFieldGoalSummary()}<br/>
                  ${PlayerStats.Assists}<br/>
                  ${PlayerStats.GetFoulSummary()}<br/>
               </div>
               <div class="dttext dtlabels">
                  Rebounds:<br/>
                  Blocks:<br/>
                  Steals: <br/>
                  Turn Overs: <br/>
                  Fouls:

               </div>
               <div class="dttext dtvalues">
                  ${PlayerStats.Rebounds}<br/>
                  ${PlayerStats.Blocks}<br/>
                  ${PlayerStats.Steals}<br/>
                  ${PlayerStats.CommittedTurnOvers}<br/>
                  ${PlayerStats.CommittFoul}
               </div>
            </div>
            <div class="sectiontitle"><span>Player Stats - Season</span></div>
            <div class="datatable">
               <div class="dttext dtlabels">
                  Played Minutes:<br/>
                  Inside Shots:<br/>
                  Field Goals:</br>
                  Assists:<br/>
                  Foul Shots:<br/>
               </div>
               <div class="dttext dtvalues">
                  0 (Coming Soon)<br/>
                  ${SeasonStats.GetInsideSummary()}<br/>
                  ${SeasonStats.GetFieldGoalSummary()}<br/>
                  ${SeasonStats.Assists}<br/>
                  ${SeasonStats.GetFoulSummary()}<br/>
               </div>
               <div class="dttext dtlabels">
                  Rebounds:<br/>
                  Blocks:<br/>
                  Steals: <br/>
                  Turn Overs: <br/>
                  Fouls:

               </div>
               <div class="dttext dtvalues">
                  ${SeasonStats.Rebounds}<br/>
                  ${SeasonStats.Blocks}<br/>
                  ${SeasonStats.Steals}<br/>
                  ${SeasonStats.CommittedTurnOvers}<br/>
                  ${SeasonStats.CommittFoul}
               </div>
            </div>
         </div>
      </div>
      <div class="break">&nbsp;</div>
      <!-- End Player Stats -->
      <div class="gamehead-cont">
         <div class="gamehead">
            <div class="sectiontitle"><span>Team Data</span></div>
            <div style="align: center;">
               <table class="teamdatatable">
                  <tr>
                     <th>Player #</th>
                     <th>Name</th>
                     <th>Inside Shots</th>
                     <th>Field Goals</th>
                     <th>Foul Shots</th>
                     <th>Rebounds</th>
                     <th>Assists</th>
                     <th>Blocks</th>
                     <th>Steals</th>
                     <th>Turn Overs</th>
                     <th>Fouls</th>
                  </tr>
                  #foreach ($eachPlayer in $AllPlayers)
                  <tr>
                     <td>${eachPlayer.Player.Number}</td>
                     <td>${eachPlayer.Player.Name}</td>
                     <td>${eachPlayer.GetInsideSummary()}</td>
                     <td>${eachPlayer.GetFieldGoalSummary()}</td>
                     <td>${eachPlayer.GetFoulSummary()}</td>
                     <td>${eachPlayer.Rebounds}</td>
                     <td>${eachPlayer.Assists}</td>
                     <td>${eachPlayer.Blocks}</td>
                     <td>${eachPlayer.Steals}</td>
                     <td>${eachPlayer.CommittedTurnOvers}</td>
                     <td>${eachPlayer.CommittFoul}</td>
                  </tr>
                  #end
               </table>
            </div>
         </div>
      </div>
      <!-- Begin Team Stats -->
      <!-- End Team Stats -->
      <div class="break">&nbsp;</div>
   </body>
</html>